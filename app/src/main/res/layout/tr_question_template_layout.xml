<?xml version="1.0" encoding="utf-8"?>
<!-- question_template.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <!-- Question Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_box_background"
        android:backgroundTint="#6BA4C0"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/questionNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Question"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/questionInput"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="0dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Type your question ..."
            android:textColor="#626262" />

    </LinearLayout>

    <!-- Answer Options Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Option A -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOptionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/optionAInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_box_background"
                android:backgroundTint="#6AA3BE"
                android:hint="Option A"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <!-- Option B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOptionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/optionBInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_box_background"
                android:backgroundTint="#6AA3BE"
                android:hint="Option B"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <!-- Option C -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOptionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/optionCInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_box_background"
                android:backgroundTint="#6AA3BE"
                android:hint="Option C"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <!-- Option D -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOptionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/optionDInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_box_background"
                android:backgroundTint="#6AA3BE"
                android:hint="Option D"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>